#include <stdio.h>
#include <conio.h>
#include <locale.h>

int main(void)
{
	setlocale(LC_ALL,"Portuguese");
	char opcao;
	
	printf("Insira uma das opçőes\n");
	printf("1- Lisboa\n");
	printf("2- Évora\n");
	printf("3- Porto\n");
	printf("4- Beja\n");
	printf("4- Braga\n");
	opcao = getch();
	
	switch (opcao)
	{
				case  '1':
			printf("max: 29şC / min: 19şC\n");
			break;
					case  '2':
			printf("max: 30şC / min: 18şC\n");
			break;
				case  '3':
			printf("max: 28şC / min: 20şC\n");
			break;
				case  '4':
			printf("max: 30şC / min: 19şC\n");
			break;
				case  '5':
			printf("max: 31şC / min: 16şC\n");
			break;
				
			
			default:
				printf("Opçăo inválida\n");
	}
	
	return 0;
}
